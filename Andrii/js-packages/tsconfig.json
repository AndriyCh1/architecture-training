{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext",                                
    "baseUrl": "./",    
    "noEmit": true,                                   
    "isolatedModules": true,                        
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                   
    "noImplicitAny": true,                         
    "strictNullChecks": true,                       
    "noUnusedLocals": true,                         
    "noUnusedParameters": true,                     
    "noFallthroughCasesInSwitch": true,             
    "skipLibCheck": true,
    "moduleResolution": "Node"                         
  }
}
